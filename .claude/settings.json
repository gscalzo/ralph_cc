{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/validate-prd-json.js",
            "blocking": true
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/check-commit-format.js",
            "blocking": false
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "If this bash command is 'git commit', ensure you've run quality checks first (typecheck, tests). If you haven't, run them before committing.",
            "blocking": false
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-summary.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": ["Bash", "Write", "Edit", "Read", "Glob", "Grep", "LSP", "TodoWrite"]
  }
}
